# ================================
# ReadEng Environment Configuration
# ================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ================================
# ENVIRONMENT
# ================================
# development | staging | production
ENVIRONMENT=development

# ================================
# SUPABASE
# ================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PROJECT_REF=your-project-ref

# ================================
# CLOUDFLARE R2 (Media Storage)
# ================================
# Get these from: https://dash.cloudflare.com/ > R2 > Manage R2 API Tokens
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key
R2_BUCKET_NAME=readeng-media
CDN_URL=https://cdn.yourdomain.com

# ================================
# MEILISEARCH (Search)
# ================================
# Get these from: https://cloud.meilisearch.com/
MEILISEARCH_HOST=https://your-instance.meilisearch.com
MEILISEARCH_API_KEY=your-meilisearch-api-key

# ================================
# LEARNING LOCKER (xAPI / Analytics)
# ================================
# Get these from your Learning Locker dashboard
LEARNING_LOCKER_ENDPOINT=https://your-lrs.learninglocker.net/data/xAPI
LEARNING_LOCKER_KEY=your-lrs-key
LEARNING_LOCKER_SECRET=your-lrs-secret

# ================================
# POSTHOG (Product Analytics)
# ================================
# Get these from: https://app.posthog.com/project/settings
POSTHOG_API_KEY=phc_your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# ================================
# SENTRY (Error Tracking)
# ================================
# Get these from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
SENTRY_DSN=https://your-key@sentry.io/your-project-id

# ================================
# LOGFLARE (Logging) - Optional
# ================================
# Get these from: https://logflare.app/
LOGFLARE_API_KEY=your-logflare-api-key
LOGFLARE_SOURCE_ID=your-source-id

# ================================
# BETTER UPTIME (Status Monitoring) - Optional
# ================================
BETTERUPTIME_API_KEY=your-betteruptime-api-key

# ================================
# APP STORE CONNECT (iOS Deployment)
# ================================
# For CI/CD pipeline - keep in GitHub Secrets for production
APPSTORE_ISSUER_ID=your-issuer-id
APPSTORE_API_KEY_ID=your-api-key-id
# APPSTORE_API_PRIVATE_KEY should be stored as a secret, not in .env

# ================================
# GOOGLE PLAY (Android Deployment)
# ================================
# For CI/CD pipeline - keep in GitHub Secrets for production
# GOOGLE_PLAY_SERVICE_ACCOUNT should be stored as a secret, not in .env

# ================================
# CLOUDFLARE PAGES (Web Deployment)
# ================================
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-account-id
